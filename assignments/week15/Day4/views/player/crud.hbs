<h3>{{viewTitle}}</h3>

<form action="/player" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{player._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{player.fullName}}">
        <div class="text-danger">
            {{player.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{player.email}}">
        <div class="text-danger">
            {{player.emailError}}</div>
    </div>
    <div class="form-group">
        <label>Mobile</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{player.mobile}}">
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="City" value="{{player.city}}">
         <div class="text-danger">
            {{player.cityNameError}}</div>
    </div>
    <div class="form-row" style="justify-content: center;">
        <div class="form-group col-sm-2" style="text-align: center;">
            <button type="submit" class="btn btn-danger"> Submit</button>
        </div>
    </div>
</form>